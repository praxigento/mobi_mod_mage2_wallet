<page
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
        layout="1column">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="billing-step" xsi:type="array">
                                            <item name="component" xsi:type="string">uiComponent</item>
                                            <item name="children" xsi:type="array">
                                                <item name="payment" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <!-- Declare additional before payment components. START -->
                                                        <item name="beforeMethods" xsi:type="array">
                                                            <item name="component" xsi:type="string">uiComponent</item>
                                                            <item name="displayArea" xsi:type="string">beforeMethods</item>
                                                            <item name="children" xsi:type="array">
                                                                <item name="partialHeader" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Praxigento_Wallet/js/view/payment/method/partial/header</item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                        <item name="renders" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <!--<item name="prxgt_partial" xsi:type="array">-->
                                                                <!--<item name="component" xsi:type="string">Praxigento_Wallet/js/view/payment/method/partial/register</item>-->
                                                                <!--<item name="methods" xsi:type="array">-->
                                                                <!--<item name="prxgt_partial" xsi:type="array">-->
                                                                <!--<item name="isBillingAddressRequired" xsi:type="boolean">false</item>-->
                                                                <!--</item>-->
                                                                <!--</item>-->
                                                                <!--</item>-->
                                                                <item name="praxigento_wallet" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Praxigento_Wallet/js/view/payment/method/full/register</item>
                                                                    <item name="methods" xsi:type="array">
                                                                        <item name="praxigento_wallet" xsi:type="array">
                                                                            <item name="isBillingAddressRequired" xsi:type="boolean">true</item>
                                                                        </item>
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>