<?xml version="1.0"?>
<page
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="invoice_totals">
            <!-- Partial totals are placed in the footer -->
            <block class="\Praxigento\Wallet\Block\Adminhtml\Order\Invoice\Total\Partial"
                    name="praxigento_wallet_partial">
            </block>
            <block class="\Praxigento\Wallet\Block\Adminhtml\Order\Invoice\Total\Grand"
                    name="praxigento_wallet_partial_grand">
                <action method="setAfterCondition">
                    <argument name="condition" xsi:type="string">praxigento_wallet_partial</argument>
                </action>
            </block>
        </referenceBlock>
    </body>
</page>
