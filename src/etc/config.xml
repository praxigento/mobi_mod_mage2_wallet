<?xml version="1.0"?>
<config
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <!-- This code should be equal to \Praxigento\Wallet\Model\Payment::CODE -->
            <praxigento_wallet>
                <active>0</active>
                <!-- Configure Payment facade in '/etc/di.xml' -->
                <model>PraxigentoWalletPayment</model>
                <order_status>pending_payment</order_status>
                <payment_action>authorize_capture</payment_action>
                <title>Use eWallet</title>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_void>1</can_void>
                <can_use_checkout>1</can_use_checkout>
                <!-- own configuration parameters -->
                <partial_enabled>1</partial_enabled>
                <partial_percent>1.00</partial_percent>
            </praxigento_wallet>
        </payment>
    </default>
</config>